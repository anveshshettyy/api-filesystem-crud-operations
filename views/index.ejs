<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Scheduler</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input name="title" class="block px-5 py-2 bg-zinc-800 w-full rounded-lg  " type="text" placeholder="Title Goes Here!">
                <textarea name="details" class="block mt-2 px-5 py-2 bg-zinc-800 w-full rounded-lg resize-none " placeholder="Write your task details here!"></textarea>
                <input class="text-white bg-blue-600 px-5 py-2 rounded-md mt-2" type="submit" value="Create Task">
                
            </form>
        </div>
        <div class="tasks p-10 flex flex-wrap gap-3">
            <% if(files.length > 0 ) { %>
                <% files.forEach(function(val){ %>
                    <div class="task w-72  px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter "><%= val %></h1>
                        <div class="flex items-center justify-between mt-3">
                            <a class="text-blue-500 inline-block " href="/file/<%= val %>">Read More</a> 
                            <a class="text-zinc-400" href="/edit/<%= val %>">Edit Filename</a>
                            <a class="text-red-500" href="/delete/<%= val %>">Delete</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h1 class="text-zinc-600">No Tasks Yet!</h1>
            <% } %>
            

            
            
        </div>
    </div>


    <script src="/javascripts/script.js"></script>
    
</body>
</html>